{
  "name": "iconx",
  "description": "A CLI tool for fetching and generating type-safe React icon components from the extensive Iconify icon library.",
  "version": "0.1.0",
  "type": "module",
  "license": "Apache-2.0",
  "publishConfig": {
    "access": "public"
  },
  "author": "Eelco Wiersma <eelco@saas-ui.dev>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/saas-js/saas-js.git",
    "directory": "packages/iconx"
  },
  "scripts": {
    "build": "bun build ./src/index.ts ./src/cli.ts ./src/mcp-server.ts --outdir dist --target node && bun run build:types",
    "build:types": "tsc --project tsconfig.json --emitDeclarationOnly --outDir dist",
    "dev": "bun run ./src/cli.ts",
    "dev:mcp": "bun run ./src/mcp-server.ts"
  },
  "bin": {
    "icons": "./dist/cli.js",
    "iconx": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "sjs": "./src/index.ts",
      "types": "./dist/src/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "src",
    "dist",
    "package.json"
  ],
  "dependencies": {
    "@babel/core": "^7.28.5",
    "@modelcontextprotocol/sdk": "^1.23.0",
    "@svgr/babel-plugin-svg-em-dimensions": "^8.0.0",
    "@svgr/core": "^8.1.0",
    "@svgr/plugin-jsx": "^8.1.0",
    "@svgr/plugin-prettier": "^8.1.0",
    "commander": "^14.0.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "typescript": "^5.8.3"
  }
}
