{
  "name": "@saas-js/slingshot",
  "version": "0.0.1",
  "type": "module",
  "exports": {
    ".": {
      "default": "./src/index.ts"
    },
    "./client": {
      "default": "./src/client.ts"
    },
    "./next": {
      "default": "./src/next/index.ts"
    },
    "./remix-node": {
      "default": "./src/remix-node/index.ts"
    },
    "./aws-lambda": {
      "default": "./src/aws-lambda/index.ts"
    }
  },
  "typesVersions": {
    "*": {
      "*": [
        "./src/index.ts"
      ],
      "client": [
        "src/client.ts"
      ],
      "next": [
        " src/next/index.ts"
      ],
      "remix-node": [
        "src/remix-node/index.ts"
      ],
      "aws-lambda": [
        "src/aws-lambda/index.ts"
      ]
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.2.1",
    "hono": "^4.0.9",
    "zod": "^3.22.4",
    "@zag-js/core": "0.54.0",
    "@zag-js/utils": "0.54.0",
    "@zag-js/file-upload": "0.54.0"
  },
  "devDependencies": {
    "typescript": "^5.4.5",
    "@zag-js/types": "0.54.0",
    "tsup": "^8.1.0"
  }
}
