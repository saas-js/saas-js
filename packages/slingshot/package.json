{
  "name": "@saas-js/slingshot",
  "version": "0.2.0",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "@saas-js": "./src/index.ts",
      "import": "./dist/index.js"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "@saas-js": "./src/client.ts",
      "import": "./dist/client.js"
    },
    "./next": {
      "types": "./dist/next/index.d.ts",
      "@saas-js": "./src/next/index.ts",
      "import": "./dist/next/index.js"
    },
    "./remix-node": {
      "types": "./dist/remix-node/index.d.ts",
      "@saas-js": "./src/remix-node/index.ts",
      "import": "./dist/remix-node/index.js"
    },
    "./aws-lambda": {
      "types": "./dist/aws-lambda/index.d.ts",
      "@saas-js": "./src/aws-lambda/index.ts",
      "import": "./dist/aws-lambda/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "release": "bun publish",
    "dev": "tsup --watch"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.4.3",
    "@zag-js/core": "1.28.0",
    "@zag-js/file-upload": "1.28.0",
    "@zag-js/utils": "1.28.0",
    "hono": "^4.10.6",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@zag-js/types": "1.28.0",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  }
}
